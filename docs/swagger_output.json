              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Internal server error"
                }
              },
              "application/xml": {
                "schema": {
                  "$ref": "#/components/schemas/Internal server error"
                }
              }
            }
          }
        },
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/Registration req.body"
              }
            }
          }
        }
      }
    },
