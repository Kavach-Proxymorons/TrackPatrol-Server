                  "$ref": "#/components/schemas/Registration successful"
                }
              },
              "application/xml": {
                "schema": {
                  "$ref": "#/components/schemas/Registration successful"
                }
              }
            }
          },
          "409": {
            "description": "Username already exists",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Username already exists"
                }
              },
              "application/xml": {
                "schema": {
                  "$ref": "#/components/schemas/Username already exists"
                }
              }
            }
          },
          "422": {
            "description": "Validation error",
            "content": {
              "application/json": {
